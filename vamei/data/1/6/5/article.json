rier new&apos;, courier;\"><span style=\"color: #0000ff;\">from</span> django.contrib.auth.forms <span style=\"color: #0000ff;\">import</span><span style=\"color: #000000;\"> UserCreationForm\r\n</span><span style=\"color: #0000ff;\">from</span> django.shortcuts <span style=\"color: #0000ff;\">import</span><span style=\"color: #000000;\"> render, redirect\r\n</span><span style=\"color: #0000ff;\">from</span> django.core.context_processors <span style=\"color: #0000ff;\">import</span><span style=\"color: #000000;\"> csrf\r\n\r\n</span><span style=\"color: #0000ff;\">def</span><span style=\"color: #000000;\"> register(request): \r\n    </span><span style=\"color: #0000ff;\">if</span> request.method == <span style=\"color: #800000;\">&apos;</span><span style=\"color: #800000;\">POST</span><span style=\"color: #800000;\">&apos;</span><span style=\"color: #000000;\">: \r\n        form </span>=<span style=\"color: #000000;\"> UserCreationForm(request.POST) \r\n        </span><span style=\"color: #0000ff;\">if</span><span style=\"color: #000000;\"> form.is_valid(): \r\n            new_user </span>=<span style=\"color: #000000;\"> form.save() \r\n        </span><span style=\"color: #0000ff;\">return</span> redirect(<span style=\"color: #800000;\">&quot;</span><span style=\"color: #800000;\">/</span><span style=\"color: #800000;\">&quot;</span><span style=\"color: #000000;\">) \r\n    </span><span style=\"color: #0000ff;\">else</span><span style=\"color: #000000;\">:\r\n        form </span>=<span style=\"color: #000000;\"> UserCreationForm()\r\n        ctx </span>= {<span style=\"color: #800000;\">&apos;</span><span style=\"color: #800000;\">form</span><span style=\"color: #800000;\">&apos;</span><span style=\"color: #000000;\">: form}\r\n        ctx.update(csrf(request))       \r\n        </span><span style=\"color: #0000ff;\">return</span> render(request, <span style=\"color: #800000;\">&quot;</span><span style=\"color: #800000;\">register.html</span><span style=\"color: #800000;\">&quot;</span>, ctx)</span></pre>\r\n</div>\r\n<p>&#xA0;</p>\r\n<p><span style=\"font-family: &apos;courier new&apos;, courier;\">&#x76F8;&#x5E94;&#x7684;&#x6A21;&#x677F;register.html&#x5982;&#x4E0B;&#xFF1A;</span></p>\r\n<div class=\"cnblogs_code\">\r\n<pre><span style=\"font-family: &apos;courier new&apos;, courier;\"><span style=\"color: #0000ff;\">&lt;</span><span style=\"color: #800000;\">form </span><span style=\"color: #ff0000;\">action</span><span style=\"color: #0000ff;\">=&quot;&quot;</span><span style=\"color: #ff0000;\"> method</span><span style=\"color: #0000ff;\">=&quot;post&quot;</span><span style=\"color: #0000ff;\">&gt;</span><span style=\"color: #000000;\">\r\n   {% csrf_token %}\r\n   {{ form.as_p }}\r\n   </span><span style=\"color: #0000ff;\">&lt;</span><span style=\"color: #800000;\">input </span><span style=\"color: #ff0000;\">type</span><span style=\"color: #0000ff;\">=&quot;submit&quot;</span><span style=\"color: #ff0000;\"> value</span><span style=\"color: #0000ff;\">=&quot;Register&quot;</span><span style=\"color: #0000ff;\">&gt;</span>\r\n<span style=\"color: #0000ff;\">&lt;/</span><span style=\"color: #800000;\">form</span><span style=\"color: #0000ff;\">&gt;</span></span></pre>\r\n</div>\r\n<p>&#xA0;</p>\r\n<p><span style=\"font-family: &apos;courier new&apos;, courier;\"><strong>&#x201C;&#x9A97;&#x5B50;&#xFF0C;&#x4F60;&#x4EEC;&#x8FD9;&#x4E9B;&#x9A97;&#x5B50;&#x201D;&#xFF0C;&#x5E84;&#x56ED;&#x4E3B;&#x6012;&#x543C;&#x7740;&#x3002;</strong></span></p>\r\n<p><span style=\"font-family: &apos;courier new&apos;, courier;\">&#xA0;</span></p>\r\n<h3><span style=\"font-family: &apos;courier new&apos;, courier;\">&#x603B;&#x7ED3;</span></h3>\r\n<p><span style=\"font-family: &apos;courier new&apos;, courier;\">&#x6B63;&#x5982;&#x6211;&#x4EEC;&#x4E0A;&#x9762;&#x63D0;&#x5230;&#x7684;&#xFF0C;&#x7528;&#x6237;&#x767B;&#x9646;&#x7CFB;&#x7EDF;&#x7684;&#x6700;&#x5927;&#x529F;&#x80FD;&#x662F;&#x533A;&#x5206;&#x767B;&#x5165;&#x548C;&#x672A;&#x767B;